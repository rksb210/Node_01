<style>
    .backbox{
        background-color: rgba(129, 86, 209, 0.952);
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center; 
    }
    .frontbox{
        background-color: hwb(143 13% 84%);
        width: 80%;
        height: auto;
        border-radius: 25px;

    }
</style>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="backbox">
            <div class="frontbox">
                <div class="row" style="background-color: rgb(124, 126, 94);">
                    <div class="col col-md-4">
                    <center><img src='/images/movie.jpg' width="50" style="padding: 4;"></center>
                    </div>
                
                    <div class="col col-md-6">
                    <h4 style="padding: 4;" ><font color="#006266">List Of Movies </font></h4>
                    </div>
                    <div class="col col-md-2">
                       <a href="/movie/movieinterface"> <img src='/images/addmovie.png' width="50" style="padding: 4;"></a>
                        </div>
                </div>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Movie</th>
                <th scope="col">Date</th>
                <th scope="col">State</th>
                <th scope="col">City</th>
                <th scope="col">Description</th>
                <th scope="col">Cinema</th>
                <th scope="col">Rating</th>
                <th scope="col">Image</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody>
                <% data.map((item,i)=>{ %>
                    <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><%= item.moviename %></td>
                        <td><%= item.date %></td>
                        <td><%= item.statename %></td>
                        <td><%= item.cityname %></td>
                        <td><%= item.description %></td>
                        <td><%= item.cinema %></td>
                        <td><%= item.rating %></td>
                        <td><a href="/movie/showmoviepicturetoedit?mid=<%= item.detailsid %>&moviepicture=<%= item.moviepicture %>&moviename=<%= item.moviename %>"><img src='/images/<%= item.moviepicture %>' style="width: 50px; border-radius: 5px;height: 50px;"></a></td>
                        <td><a href="/movie/showmovietoedit?mid=<%= item.detailsid %>" style="text-decoration: none;">Edit</a></td>
                      </tr>
                <% }) %>
            </tbody>
        </table>
            </div>
            </div>
    </body>
</html>